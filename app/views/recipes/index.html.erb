<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://picsum.photos/1200/400?food');">
  <div class="container">
    <h1>Mes Recettes de Cuisine</h1>
    <p>Découvrez et partagez vos meilleures recettes</p>
    <% if user_signed_in? %>
      <%= link_to "Ajouter une recette", new_recipe_path, class: "btn btn-flat" %>
    <% end %>
  </div>
</div>

<div class="container mt-4">
  <% if params[:query].present? %>
    <div class="alert alert-info">
      <% if @recipes.any? %>
        <%= pluralize(@recipes.count, "recette trouvée", "recettes trouvées") %> pour "<%= params[:query] %>"
      <% else %>
        Aucune recette trouvée pour "<%= params[:query] %>"
      <% end %>
      <%= link_to "Voir toutes les recettes", recipes_path, class: "btn btn-ghost btn-sm ms-3" %>
    </div>
  <% end %>

  <!-- Filtres rapides -->
  <div class="mb-4">
    <%= link_to "Toutes", recipes_path, class: "btn btn-ghost" %>
    <%= link_to "Entrées", recipes_path(query: "entrée"), class: "btn btn-ghost" %>
    <%= link_to "Plats", recipes_path(query: "plat"), class: "btn btn-ghost" %>
    <%= link_to "Desserts", recipes_path(query: "dessert"), class: "btn btn-ghost" %>
  </div>

  <div class="cards">
    <% @recipes.each do |recipe| %>
      <div class="card-category position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://picsum.photos/seed/<%= recipe.id %>/400/300')">
        <%= link_to recipe.title, recipe, class: "text-decoration-none text-white" %>

        <!-- Badge catégorie en haut à droite -->
        <div class="badge bg-primary position-absolute top-0 end-0 m-2">
          <%= recipe.category %>
        </div>

        <!-- Badge temps total en bas à gauche -->
        <% total_time = recipe.prep_time.to_i + recipe.cook_time.to_i %>
        <% if total_time > 0 %>
          <div class="badge bg-dark position-absolute bottom-0 start-0 m-2">
            <i class="fas fa-clock"></i> <%= total_time %> min
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
