<h1>Nouvelle Recette</h1>

<%= form_with model: @recipe do |form| %>
  <% if @recipe.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "Nom de la recette", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description", class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category, "Catégorie", class: "form-label" %>
    <%= form.select :category, ['entrée', 'plat', 'dessert'], {}, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= form.label :prep_time, "Temps de préparation (minutes)", class: "form-label" %>
      <%= form.number_field :prep_time, class: "form-control", placeholder: "ex: 15", min: 0 %>
    </div>

    <div class="col-md-6">
      <%= form.label :cook_time, "Temps de cuisson (minutes)", class: "form-label" %>
      <%= form.number_field :cook_time, class: "form-control", placeholder: "ex: 30", min: 0 %>
    </div>
  </div>

  <%= form.submit "Créer la recette", class: "btn btn-flat" %>
  <%= link_to "Annuler", recipes_path, class: "btn btn-ghost" %>
<% end %>
