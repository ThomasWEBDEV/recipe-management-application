<div class="auth-container">
  <div class="auth-card">
    <!-- Header -->
    <div class="auth-header">
      <div class="auth-icon">
        <i class="fas fa-key"></i>
      </div>
      <h1 class="auth-title">Mot de passe oublié ?</h1>
      <p class="auth-subtitle">Pas de panique ! Nous allons vous aider à le réinitialiser</p>
    </div>

    <!-- Alerts -->
    <% if alert %>
      <div class="auth-alert alert-danger">
        <i class="fas fa-exclamation-circle"></i>
        <%= alert %>
      </div>
    <% end %>

    <% if notice %>
      <div class="auth-alert alert-success">
        <i class="fas fa-check-circle"></i>
        <%= notice %>
      </div>
    <% end %>

    <!-- Error Messages -->
    <% if resource.errors.any? %>
      <div class="auth-errors">
        <h2>
          <i class="fas fa-exclamation-triangle"></i>
          <%= pluralize(resource.errors.count, "erreur") %> détectée(s)
        </h2>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "auth-form" }) do |f| %>

      <!-- Email Field -->
      <div class="form-group">
        <%= f.label :email, class: "form-label" do %>
          <i class="fas fa-envelope"></i>
          Email
        <% end %>
        <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            placeholder: "votreemail@exemple.com",
            class: "form-control" %>
        <small style="color: #718096; display: block; margin-top: 8px;">
          Entrez l'email associé à votre compte
        </small>
      </div>

      <!-- Submit Button -->
      <%= f.submit "Envoyer les instructions", class: "auth-submit" %>
    <% end %>

    <!-- Footer -->
    <div class="auth-footer">
      <p>
        Vous vous souvenez de votre mot de passe ?
        <%= link_to "Se connecter", new_session_path(resource_name) %>
      </p>
      <p style="margin-top: 10px;">
        Pas encore de compte ?
        <%= link_to "Créer un compte", new_registration_path(resource_name) %>
      </p>
    </div>
  </div>
</div>
