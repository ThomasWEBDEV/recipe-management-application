<!DOCTYPE html>
<html>
  <head>
    <title>Recettes Cuisine</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- Navbar -->
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <div class="container-fluid">
        <%= link_to root_path, class: "navbar-brand" do %>
          <i class="fas fa-utensils"></i> Mes Recettes
        <% end %>

        <!-- Formulaire de recherche -->
        <%= form_with url: recipes_path, method: :get, class: "d-flex flex-grow-1 mx-4" do |f| %>
          <%= f.text_field :query,
              placeholder: "Rechercher une recette...",
              value: params[:query],
              class: "form-control me-2" %>
          <%= f.submit "Rechercher", class: "btn btn-flat" %>
        <% end %>

        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Nouvelle recette", new_recipe_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to favorites_path, class: "nav-link" do %>
                  <i class="fas fa-heart text-danger"></i> Mes favoris
                  <% if current_user.favorites.any? %>
                    <span class="badge bg-danger rounded-pill"><%= current_user.favorites.count %></span>
                  <% end %>
                <% end %>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                  <%= user_avatar(current_user, size: 32) %>
                  <span class="ms-2"><%= current_user.email.split('@').first.capitalize %></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "Mon profil", "#", class: "dropdown-item" %>
                  </li>
                  <li>
                    <%= link_to favorites_path, class: "dropdown-item" do %>
                      <i class="fas fa-heart text-danger me-2"></i>Mes favoris
                    <% end %>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to "DÃ©connexion", destroy_user_session_path,
                        data: { "turbo-method": :delete },
                        class: "dropdown-item text-danger" %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Inscription", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="container mt-4">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
