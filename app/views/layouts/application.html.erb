<!DOCTYPE html>
<html>
  <head>
    <title>Recettes Cuisine</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- Navbar moderne -->
    <div class="navbar navbar-expand-lg navbar-light navbar-lewagon">
      <div class="container-fluid">
        <%= link_to root_path, class: "navbar-brand" do %>
          <i class="fas fa-utensils me-2"></i>Mes Recettes
        <% end %>

        <!-- Bouton mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <!-- Formulaire de recherche centré -->
          <div class="d-flex flex-grow-1 mx-4">
            <%= form_with url: recipes_path, method: :get, class: "d-flex w-100" do |f| %>
              <%= f.text_field :query,
                  placeholder: "Rechercher une recette...",
                  value: params[:query],
                  class: "form-control me-2" %>
              <%= f.submit "Rechercher", class: "btn btn-flat" %>
            <% end %>
          </div>

          <!-- Navigation -->
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Nouvelle recette", new_recipe_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to favorites_path, class: "nav-link" do %>
                  <i class="fas fa-heart text-danger"></i> Mes favoris
                  <% if current_user.favorites.any? %>
                    <span class="badge bg-danger rounded-pill"><%= current_user.favorites.count %></span>
                  <% end %>
                <% end %>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                  <%= user_avatar(current_user, size: 28) %>
                  <span class="ms-2 d-none d-md-inline"><%= current_user.email.split('@').first.capitalize %></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li>
                    <%= link_to "Mon profil", "#", class: "dropdown-item" %>
                  </li>
                  <li>
                    <%= link_to favorites_path, class: "dropdown-item" do %>
                      <i class="fas fa-heart text-danger me-2"></i>Mes favoris
                    <% end %>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to "Déconnexion", destroy_user_session_path,
                        data: { "turbo-method": :delete },
                        class: "dropdown-item text-danger" %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Inscription", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <!-- Contenu principal -->
    <main>
      <% if notice %>
        <div class="container mt-3">
          <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i><%= notice %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        </div>
      <% end %>
      <% if alert %>
        <div class="container mt-3">
          <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle me-2"></i><%= alert %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script pour navbar scroll -->
    <script>
      // Navbar scroll effect
      window.addEventListener('scroll', function() {
        const navbar = document.querySelector('.navbar-lewagon');
        if (window.scrollY > 50) {
          navbar.classList.add('scrolled');
        } else {
          navbar.classList.remove('scrolled');
        }
      });
    </script>
    <!-- Floating Action Button -->
    <% if user_signed_in? && !current_page?(new_recipe_path) %>
      <%= link_to new_recipe_path, class: "fab" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    <% end %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
