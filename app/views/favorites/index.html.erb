<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-heart text-danger"></i> Mes Favoris</h1>
  <%= link_to "← Retour aux recettes", recipes_path, class: "btn btn-ghost" %>
</div>

<% if @favorite_recipes.any? %>
  <div class="row">
    <% @favorite_recipes.each do |recipe| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <%= image_tag "https://picsum.photos/seed/#{recipe.id}/400/250", class: "card-img-top" %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= recipe.title %></h5>
            <p class="card-text flex-grow-1"><%= truncate(recipe.description, length: 100) %></p>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">Par <%= recipe.user.email.split('@').first %></small>
              <span class="badge bg-primary"><%= recipe.category %></span>
            </div>
            <div class="mt-2 d-flex gap-2">
              <%= link_to "Voir la recette", recipe, class: "btn btn-flat btn-sm" %>
              <%= render 'shared/favorite_button', recipe: recipe %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-5">
    <i class="far fa-heart fa-3x text-muted mb-3"></i>
    <h3>Aucun favori pour le moment</h3>
    <p class="text-muted">Explorez les recettes et ajoutez-les à vos favoris !</p>
    <%= link_to "Découvrir les recettes", recipes_path, class: "btn btn-flat" %>
  </div>
<% end %>
