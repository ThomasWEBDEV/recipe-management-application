<footer class="footer">
  <div class="container">
    <!-- Stats Section -->
    <div class="footer-stats">
      <div class="footer-stat">
        <span class="number"><%= Recipe.count %></span>
        <span class="label">Recettes</span>
      </div>
      <div class="footer-stat">
        <span class="number"><%= User.count %></span>
        <span class="label">Membres</span>
      </div>
      <div class="footer-stat">
        <span class="number"><%= Favorite.count %></span>
        <span class="label">Favoris</span>
      </div>
      <div class="footer-stat">
        <span class="number"><%= Recipe.sum(:views_count) %></span>
        <span class="label">Vues</span>
      </div>
    </div>

    <!-- Main Footer Content -->
    <div class="footer-content">
      <!-- About Section -->
      <div class="footer-section">
        <h4>
          <i class="fas fa-utensils"></i>
          Mes Recettes
        </h4>
        <p>Découvrez, partagez et savourez les meilleures recettes du monde. Une communauté de passionnés de cuisine qui partage son savoir-faire.</p>
        <div class="social-links">
          <a href="#" class="social-link" title="Facebook">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="social-link" title="Instagram">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="#" class="social-link" title="Twitter">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="social-link" title="Pinterest">
            <i class="fab fa-pinterest"></i>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="footer-section">
        <h4>
          <i class="fas fa-compass"></i>
          Navigation
        </h4>
        <ul>
          <li>
            <%= link_to root_path do %>
              <i class="fas fa-home"></i> Accueil
            <% end %>
          </li>
          <li>
            <%= link_to recipes_path do %>
              <i class="fas fa-utensils"></i> Toutes les recettes
            <% end %>
          </li>
          <% if user_signed_in? %>
            <li>
              <%= link_to favorites_path do %>
                <i class="fas fa-heart"></i> Mes favoris
              <% end %>
            </li>
            <li>
              <%= link_to new_recipe_path do %>
                <i class="fas fa-plus-circle"></i> Créer une recette
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_registration_path do %>
                <i class="fas fa-user-plus"></i> Inscription
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt"></i> Connexion
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Categories -->
      <div class="footer-section">
        <h4>
          <i class="fas fa-list"></i>
          Catégories
        </h4>
        <ul>
          <li>
            <%= link_to recipes_path(query: "entrée") do %>
              <i class="fas fa-leaf"></i> Entrées (<%= Recipe.where(category: "entrée").count %>)
            <% end %>
          </li>
          <li>
            <%= link_to recipes_path(query: "plat") do %>
              <i class="fas fa-drumstick-bite"></i> Plats (<%= Recipe.where(category: "plat").count %>)
            <% end %>
          </li>
          <li>
            <%= link_to recipes_path(query: "dessert") do %>
              <i class="fas fa-ice-cream"></i> Desserts (<%= Recipe.where(category: "dessert").count %>)
            <% end %>
          </li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="footer-section">
        <h4>
          <i class="fas fa-envelope"></i>
          Newsletter
        </h4>
        <p>Recevez nos meilleures recettes chaque semaine directement dans votre boîte mail !</p>
        <form class="newsletter-form" action="#" method="post">
          <input type="email" placeholder="Votre email" required>
          <button type="submit">
            <i class="fas fa-paper-plane"></i>
          </button>
        </form>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <p>
        &copy; <%= Time.current.year %> Mes Recettes de Cuisine -
        Fait avec <i class="fas fa-heart" style="color: #e76f51;"></i> par
        <%= link_to "Thomas", "#" %>
      </p>
    </div>
  </div>
</footer>
